<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1C2C7"
    android:padding="16dp"
    tools:context=".ui.my_locations.MyLocationsFragment">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa điểm của tôi"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Card chứa danh sách địa điểm -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLocations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/menuBackground"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardNavigation"
        app:layout_constraintHeight_percent="0.50">   <!-- Chỉ chiếm 45% màn hình -->

        <!-- Scrollable list -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Item 1: Nhà riêng -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nhà riêng"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số 12, Đường Lê Lợi"
                                android:textSize="13sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnNavigateHome"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_navigation"
                            android:contentDescription="Bắt đầu điều hướng"
                            android:padding="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Item 2: Trường học -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trường học"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đại học Công nghệ Đông Á"
                                android:textSize="13sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnNavigateUniversity"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_navigation"
                            android:contentDescription="Bắt đầu điều hướng"
                            android:padding="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Item 3: Bến xe buýt -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bến xe buýt"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bến xe trung tâm"
                                android:textSize="13sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnNavigateBus"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_navigation"
                            android:contentDescription="Bắt đầu điều hướng"
                            android:padding="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Item 4: Siêu thị -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Siêu thị"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vinmart - Nguyễn Trãi"
                                android:textSize="13sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnNavigateMarket"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_navigation"
                            android:contentDescription="Bắt đầu điều hướng"
                            android:padding="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Item 5: Quán cà phê -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quán cà phê"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Highlands Coffee"
                                android:textSize="13sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnNavigateCafe"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_navigation"
                            android:contentDescription="Bắt đầu điều hướng"
                            android:padding="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>


    <!-- Card dẫn đường -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardLocations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang đến: Trường Đại học"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Còn 480 m"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_navigation" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/tvInstruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150 m nữa rẽ trái"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rẽ trái vào đường Trần Hưng Đạo"
                        android:textSize="15sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnStopNav"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_stop"
                    android:contentDescription="Dừng"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
