<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1C2C7"
    android:padding="16dp"
    tools:context=".ui.my_locations.MyLocationsFragment">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điều hướng"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Card chứa 2 nút chức năng -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLocations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/menuBackground"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Nút Camera -->
            <Button
                android:id="@+id/btnCamera"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="Mở Camera"
                android:textSize="20sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_camera"
                android:drawablePadding="20dp"
                android:padding="16dp"
                android:backgroundTint="@android:color/white"
                android:background="@null"
                android:textColor="@android:color/black"
                android:layout_marginBottom="20dp"/>

            <!-- Nút Tìm nơi muốn đến -->
            <Button
                android:id="@+id/btnSearchDestination"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:text="Tìm nơi muốn đến"
                android:textSize="20sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="20dp"
                android:padding="16dp"
                android:backgroundTint="@android:color/white"
                android:background="@null"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Card dẫn đường -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/cardLocations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Đang đến: Trường Đại học"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:text="Còn 480 m"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_navigation" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="14dp">

                    <TextView
                        android:id="@+id/tvInstruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150 m nữa rẽ trái"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Rẽ trái vào đường Trần Hưng Đạo"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnStopNav"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Dừng"
                    android:src="@drawable/ic_stop" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
